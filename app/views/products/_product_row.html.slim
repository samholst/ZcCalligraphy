.col.s12.m6.l4
  .card.hoverable
    .card-image
      = image_tag 'http://materializecss.com/images/sample-1.jpg'
      span.card-title = product.name
    .card-content
      | Unit Price: 
      span[style="color: green"] = number_to_currency product.price 
    .card-action.center-align
      = form_for order_item, remote: true do |f| 
        .col.s3.offset-s1
          = f.number_field :quantity, value: 1, class: "form-control", min: 1 
        .col.s5.product-submit
          = f.hidden_field :product_id, value: product.id
          = f.submit "Add to Cart", class: "waves-effect waves-light btn" 
